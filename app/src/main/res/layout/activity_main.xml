<!--        />-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/toggleRecording">
        <ImageView
            android:id="@+id/field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_alignTop="@id/toggleRecording"
            android:src="@drawable/numpad"
            />
        <ImageView
            android:id="@+id/diglett1"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginLeft="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row1_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett2"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/diglett_row1_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett3"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginRight="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row1_top_margin"
            android:layout_gravity="right"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett4"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginLeft="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row2_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett5"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/diglett_row2_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett6"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginRight="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row2_top_margin"
            android:layout_gravity="right"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett7"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginLeft="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row3_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett8"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/diglett_row3_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett9"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_marginRight="@dimen/diglett_col_side_margin"
            android:layout_marginTop="@dimen/diglett_row3_top_margin"
            android:layout_gravity="right"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
        <ImageView
            android:id="@+id/diglett0"
            android:layout_width="@dimen/diglett_height"
            android:layout_height="@dimen/diglett_width"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/diglett_row4_top_margin"
            android:src="@drawable/diglett"
            android:alpha="@dimen/diglett_alpha"
            />
    </FrameLayout>

</RelativeLayout>